@model IEnumerable<RoomBookingSystem.Models.Booking>
@{
    ViewData["Title"] = "My Bookings";
}

<h2>My Bookings</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">New Booking</a>
    <a asp-action="Previous" class="btn btn-secondary">View Previous</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Room</th>
            <th>Start</th>
            <th>End</th>
            <th>Recurring</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.Room.Name</td>
                <td>@b.StartTime.ToLocalTime()</td>
                <td>@b.EndTime.ToLocalTime()</td>
                <td>@b.Recurrence</td>
                <td>
                    <a asp-action="Reschedule" asp-route-id="@b.Id" class="btn btn-sm btn-warning">Reschedule</a>
                    <a asp-action="Cancel" asp-route-id="@b.Id" class="btn btn-sm btn-danger">Cancel</a>
                </td>
            </tr>
        }
    </tbody>
</table>
